{
	"provider": "virtualbox",
	"bootstrapper": {
		"workspace": "/target",
		"tarball":   true
	},
	"image": {
		"name":        "debian-{release}-{architecture}-{%y}{%m}{%d}",
		"description": "Debian {release} {architecture}"
	},
	"system": {
		"release":      "wheezy",
		"architecture": "amd64",
		"timezone":     "UTC",
		"locale":       "en_US",
		"charmap":      "UTF-8"
	},
	"volume": {
		"backing": "vdi",
		"partitions": {
			"type": "gpt",
			"boot": {
				"size": 64,
				"filesystem": "ext2"
			},
			"root": {
				"size": 832,
				"filesystem": "ext4"
			},
			"swap": {"size": 128}
		}
	}
}
